<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".SignUpActivity">

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/register_now_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/pink_700"
            android:fontFamily="@font/mastery_kingdom_font"
            android:padding="8dp"
            android:text="Register now!"
            android:layout_marginBottom="10dp"
            android:textAllCaps="true"
            android:textColor="@color/blue_700"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/its_free_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_now_text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@color/blue_700"
            android:fontFamily="@font/mastery_kingdom_font"
            android:paddingHorizontal="15dp"
            android:paddingVertical="8dp"
            android:text="It's free"
            android:textColor="@color/pink_700"
            android:textSize="40sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/register_name_edit_text"
            android:layout_below="@id/its_free_text_view"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/border_pink_700_bottom"
            android:layout_width="match_parent"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="25dp"
            android:textColor="@color/pink_700"
            android:layout_height="60dp"
            android:hint="User name"
            android:textColorHint="@color/pink_500" />

        <EditText
            android:id="@+id/register_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/register_name_edit_text"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/border_pink_700_bottom"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingHorizontal="10dp"
            android:textColor="@color/pink_700"
            android:textColorHint="@color/pink_500" />

        <EditText
            android:id="@+id/register_password_confirm_edit_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/register_password_edit_text"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/border_pink_700_bottom"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:paddingHorizontal="10dp"
            android:textColor="@color/pink_700"
            android:textColorHint="@color/pink_500" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/register_sign_up_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/register_password_confirm_edit_text"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_blue_pink_gradient"
            android:text="Sign up"
            app:backgroundTintMode="add" />

        <TextView
            android:id="@+id/go_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_sign_up_button"
            android:layout_centerHorizontal="true"
            android:text="Already have an account? Login!"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </RelativeLayout>

</RelativeLayout>