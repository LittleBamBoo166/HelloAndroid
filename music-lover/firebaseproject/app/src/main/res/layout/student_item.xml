<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border_gradient_radius"
        android:padding="20dp">

        <TextView
            android:id="@+id/id_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="id"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/student_name_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/mastery_kingdom_font"
            android:text="Student name"
            android:textAllCaps="true"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/student_id_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/student_name_lv"
            android:layout_marginBottom="10dp"
            android:text="Student ID"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/student_item_update_group_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/student_id_lv"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/edit_student_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_circle_60_gradient"
                android:src="@drawable/ic_baseline_edit_24"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/save_student_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/bg_circle_60_gradient"
                android:src="@drawable/ic_baseline_save_24"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/delete_student_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/bg_circle_60_gradient"
                android:src="@drawable/ic_baseline_delete_24"
                app:tint="@color/white" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>