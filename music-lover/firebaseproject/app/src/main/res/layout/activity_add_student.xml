<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".AddStudentActivity">

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/add_student_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@color/blue_700"
            android:fontFamily="@font/mastery_kingdom_font"
            android:paddingHorizontal="15dp"
            android:paddingVertical="8dp"
            android:text="Add student"
            android:textColor="@color/pink_700"
            android:textSize="40sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/add_student_name"
            android:layout_below="@id/add_student_text"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/border_pink_700_bottom"
            android:layout_width="match_parent"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="25dp"
            android:textColor="@color/pink_700"
            android:layout_height="60dp"
            android:hint="Student name"
            android:textColorHint="@color/pink_500" />

        <EditText
            android:id="@+id/add_student_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/add_student_name"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/border_pink_700_bottom"
            android:hint="Student ID"
            android:paddingHorizontal="10dp"
            android:textColor="@color/pink_700"
            android:textColorHint="@color/pink_500" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_student_materialBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/add_student_id"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_blue_pink_gradient"
            android:text="ADD"
            app:backgroundTintMode="add" />
    </RelativeLayout>

</RelativeLayout>