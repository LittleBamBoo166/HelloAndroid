<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ac9393">

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <RelativeLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_album_item"
                android:alpha="0.3"
                app:tint="#77000000" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/bg_album_item"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/imgAlbum"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/album1" />

        <RelativeLayout
            android:id="@+id/moveToAlbumDetail"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_right"
                android:alpha="0.1"
                app:tint="#77000000"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_right"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/right"
                android:padding="15dp"
                app:tint="#b312ec"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="125dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameAlbum"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:text="EverMore"
                android:textAllCaps="true"
                android:gravity="bottom"
                android:textColor="#000"
                android:fontFamily="@font/bagife"
                android:textSize="40sp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/numberSongs"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:text="9 songs"
                android:textSize="15sp"
                android:textColor="#989898"
                android:layout_weight="1"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/album_id"
        android:text="Album id"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="0dp" />

</RelativeLayout>