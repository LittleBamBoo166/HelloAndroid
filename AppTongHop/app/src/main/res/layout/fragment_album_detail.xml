<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlbumDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:background="#b312ec"
            android:layout_width="150dp"
            android:layout_height="match_parent" />

        <View
            android:background="#faf7f7"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <RelativeLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_album_item"
                android:alpha="0.3"
                app:tint="#77000000" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/bg_album_item"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/imgAlbum"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/album1" />

        <LinearLayout
            android:layout_marginLeft="125dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameAlbum"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:text="EverMore"
                android:textAllCaps="true"
                android:gravity="bottom"
                android:textColor="#000"
                android:fontFamily="@font/bagife"
                android:textSize="40sp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/numberSongs"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:text="9 songs"
                android:textSize="15sp"
                android:textColor="#989898"
                android:layout_weight="1"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="200dp"
        android:layout_marginLeft="170dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/songName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Tim McGraw"
            android:gravity="bottom"
            android:textColor="#000"
            android:layout_marginBottom="7dp"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/songName2"
            android:layout_marginBottom="7dp"
            android:layout_below="@id/songName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Picture to Burn"
            android:gravity="bottom"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/songName3"
            android:layout_below="@id/songName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:text="3. Teardrops on My Guitar"
            android:gravity="bottom"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/songName4"
            android:layout_below="@id/songName3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:text="4. A Place in This World"
            android:gravity="bottom"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/songName5"
            android:layout_below="@id/songName4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Cold as You"
            android:gravity="bottom"
            android:layout_marginBottom="7dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_weight="1"/>


    </RelativeLayout>

</FrameLayout>