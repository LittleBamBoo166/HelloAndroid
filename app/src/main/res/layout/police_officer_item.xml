<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border_gradient_radius"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/container_1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/police_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:src="@drawable/taylor" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/police_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/mastery_kingdom_font"
                    android:text="Student name"
                    android:textAllCaps="true"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/work_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Work place"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:drawableLeft="@drawable/ic_baseline_place_24"
            android:drawableTint="@color/pink_700"
            android:drawablePadding="10dp"
            android:id="@+id/country"
            android:layout_marginBottom="10dp"
            android:text="Country"
            android:layout_below="@id/container_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:drawableLeft="@drawable/ic_baseline_confirmation_number_24"
            android:drawableTint="@color/purple_200"
            android:drawablePadding="10dp"
            android:id="@+id/level"
            android:layout_marginBottom="10dp"
            android:text="Level"
            android:layout_below="@id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:drawableLeft="@drawable/ic_baseline_star_24"
            android:drawableTint="@color/blue_700"
            android:drawablePadding="10dp"
            android:id="@+id/starNumber"
            android:layout_marginBottom="10dp"
            android:text="Star Number"
            android:layout_below="@id/level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>