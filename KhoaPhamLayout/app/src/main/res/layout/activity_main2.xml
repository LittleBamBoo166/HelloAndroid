<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<!--  để chiều cao là 0dp sẽ tự động kéo kích thước theo layout weight mà không bị ảnh hưởng bởi chiều cao của màn hình  -->
    <LinearLayout
        android:weightSum="3"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:gravity="center"
            android:background="#CDDC39"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="45sp"
            android:textColor="#E91E63"/>
        <TextView
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:background="#3F51B5"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="45sp"
            android:textColor="#FFEB3B"/>
    </LinearLayout>

    <LinearLayout
        android:weightSum="12"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:gravity="center"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:background="#F44336"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="45sp"
            android:textColor="#FFEB3B"/>
        <TextView
            android:gravity="center"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:background="#51B53F"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="45sp"
            android:textColor="#9C27B0"/>
        <TextView
            android:gravity="center"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:background="#B5A53F"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="45sp"
            android:textColor="#2E2D23"/>
    </LinearLayout>

    <LinearLayout
        android:weightSum="13"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:gravity="center"
            android:background="#009688"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="45sp"
            android:textColor="#E49981"/>
        <TextView
            android:gravity="center"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:background="#FF0057"
            android:layout_height="match_parent"
            android:text="7"
            android:textSize="45sp"
            android:textColor="#CDDC39"/>
    </LinearLayout>

    <TextView
        android:gravity="center"
        android:background="#331E59"
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="45sp"
        android:textColor="#FFC107"
        android:text="8" />
</LinearLayout>
