<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scaleType="fitXY"
        android:id="@+id/background_top"
        android:src="@drawable/background_top"/>

    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="70dp"
        android:padding="15dp"
        android:hint="Email"
        android:gravity="center"
        android:background="@drawable/background_edit_text"
        android:layout_below="@id/background_top"/>

    <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="70dp"
        android:padding="15dp"
        android:hint="Password"
        android:gravity="center"
        android:inputType="textPassword"
        android:background="@drawable/background_edit_text"
        android:layout_below="@id/email_edit_text"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signup_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_edit_text"
        android:layout_marginStart="70dp"
        android:padding="12dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:background="@drawable/background_button"
        android:layout_marginEnd="70dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nguyen Thi Phi Thuong"
        android:layout_above="@id/masinhvien_text"
        android:gravity="center"/>

    <TextView
        android:id="@+id/masinhvien_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:text="1911505310267"
        android:gravity="center"/>

</RelativeLayout>