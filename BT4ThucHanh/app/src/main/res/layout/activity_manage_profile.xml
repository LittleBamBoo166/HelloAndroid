<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingVertical="16dp"
    tools:context=".ManageProfileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cat"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="75dp"
        android:text="Hello PhiThuong"
        android:textColor="#F5A302"
        android:textSize="25sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textColor="#F5A302"
        android:textSize="25sp"
        android:layout_marginTop="171dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#F5A302"
        android:textSize="25sp"
        android:layout_marginTop="250dp" />

    <EditText
        android:id="@+id/editTextUserName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="161dp"
        android:hint="PhiThuong"
        android:inputType="textPersonName"
        android:textColor="#2A2E34" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="240dp"
        android:hint="hehehe"
        android:inputType="text"
        android:textColor="#2A2E34" />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/buttonSave"
        android:text="Save"
        android:textColor="#f5b301"
        android:textSize="20sp"
        android:layout_alignTop="@+id/editTextPassword"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#2A2E34"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/buttonLogout"
        android:text="Logout"
        android:textColor="#2A2E34"
        android:textSize="20sp"
        android:layout_alignTop="@+id/buttonSave"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#f5b301"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/cat"
        android:background="@drawable/cat"
        android:layout_marginTop="50dp"/>
</RelativeLayout>